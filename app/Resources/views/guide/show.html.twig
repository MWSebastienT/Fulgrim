{% extends "DestinyFinalBundle::layout.html.twig" %}

{% block pageContent %}
    <h1>Guide</h1>

    <table class="crud">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ guide.id }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ guide.url }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ guide.name }}</td>
            </tr>
        <tr>
            <th>Image Url</th>
            <td>{{ guide.imageUrl }}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('guide_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('guide_edit', { 'id': guide.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
